config BOARD_SUPERMICRO_BASEBOARD_X11_LGA1151V2_SERIES
	def_bool n
	select BOARD_ROMSIZE_KB_32768
	select DRIVERS_ASPEED_AST2050
	select DRIVERS_UART_8250IO
	select HAVE_ACPI_RESUME
	select HAVE_ACPI_TABLES
	select IPMI_KCS
	select SOC_INTEL_CANNONLAKE_PCH_H
	select SOC_INTEL_COFFEELAKE
	select SOC_INTEL_COMMON_BLOCK_LPC_COMB_ENABLE
	select SUPERIO_ASPEED_AST2400
	select SUPERIO_ASPEED_COMMON_PRE_RAM
	select SUPERIO_ASPEED_HAS_UART_DELAY_WORKAROUND

if BOARD_SUPERMICRO_BASEBOARD_X11_LGA1151V2_SERIES

config MAINBOARD_DIR
	default "supermicro/x11-lga1151v2-series"

