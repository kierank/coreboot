	default "X11SCH-F"	if BOARD_SUPERMICRO_X11SCH_F

config MAX_CPUS
	default 16

config VARIANT_DIR
	default "x11sch-f"	if BOARD_SUPERMICRO_X11SCH_F

config OVERRIDE_DEVICETREE
	default "variants/\$(CONFIG_VARIANT_DIR)/overridetree.cb"

config DIMM_SPD_SIZE
	default 512

config POST_DEVICE
	default n

config POST_IO
	default n

config CBFS_SIZE
	default 0xa00000

